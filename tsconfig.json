{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "sourceMap": true,
    "lib": ["es2017", "dom"],
    "allowJs": true,
    "jsx": "preserve",
    "strict": true,
    "experimentalDecorators": true
  },
  "exclude": ["node_modules"]
}
